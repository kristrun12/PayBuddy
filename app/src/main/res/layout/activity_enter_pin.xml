<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kla.paybuddy.EnterPin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pin"
        android:textSize="@dimen/pin"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/inputblock_vertical_margin"
        android:layout_marginLeft="@dimen/inputblock_horzontal_margin"
        android:layout_marginRight="@dimen/inputblock_horzontal_margin"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editPin"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/inputblock_horzontal_margin"
        android:layout_marginRight="@dimen/inputblock_horzontal_margin"
        android:inputType="number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/setPin"
        android:layout_below="@+id/editPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:clickable="true"
        android:onClick="pinEntered" />

</RelativeLayout>

